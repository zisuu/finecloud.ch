{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update _VERSION variables in GitHub Workflow",
      "fileMatch": ["(^|/)main\\.yml"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-]+?)(?: depName=(?<depName>.+?))?packageName=(?<packageName>.+?)\\s+\\w*_VERSION:\\s*\"(?<currentValue>[^\"]+)\""
      ]
    }
  ]
}
